{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Forge Launcher",
  "version": "0.1.0",
  "identifier": "com.innov.launcher",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "FORGE Launcher",
        "width": 1280,
        "height": 720,
        "maximizable": false,
        "resizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEYzMTg0NTM1MzRGRDA5ODMKUldTRENmMDBOVVVZOCsvaDB4dWRLK3dkdHVGTWJNeVBOUlo0eldBc1dpN2pyZ3JnVmRuZkN1SzgK",
      "endpoints": [
        "https://github.com/InnovativeDevSolutions/launcher/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
